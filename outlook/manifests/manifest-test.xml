<?xml version="1.0" encoding="utf-8"?>
<OfficeApp
        xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
        xsi:type="MailApp">

    <Id>2a0d6f1a-d292-11ec-9d64-0242ac120002</Id>
    <Version>1.0</Version>
    <ProviderName>Yoxel</ProviderName>
    <DefaultLocale>en-US</DefaultLocale>
    <DisplayName DefaultValue="Aurinko example"/>
    <Description DefaultValue="Inbox app for Salesforce."/>

    <IconUrl DefaultValue="https://example.aurinko.io/outlook/icons/aurinko_80.png"/>
    <HighResolutionIconUrl DefaultValue="https://example.aurinko.io/outlook/icons/aurinko_192.png"/>

    <SupportUrl DefaultValue="https://docs.aurinko.io/category/29-workspace-addons"/>

    <AppDomains>
        <AppDomain>https://api.aurinko.io/</AppDomain>
    </AppDomains>

    <Hosts>
        <Host Name="Mailbox"/>
    </Hosts>
    <Requirements>
        <Sets DefaultMinVersion="1.1">
            <Set Name="Mailbox"/>
        </Sets>
    </Requirements>

    <!-- These elements support older clients that don't support add-in commands -->
    <FormSettings>
        <Form xsi:type="ItemRead">
            <DesktopSettings>
                <SourceLocation DefaultValue="https://example.aurinko.io/outlook/read.html?clientId=20e68f5b5758ae0ec22f455f6d54c1c4"/>
                <RequestedHeight>400</RequestedHeight>
            </DesktopSettings>
        </Form>
    </FormSettings>

    <Permissions>ReadWriteItem</Permissions>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <DisableEntityHighlighting>false</DisableEntityHighlighting>

    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
                      xsi:type="VersionOverridesV1_0">

        <Requirements>
            <bt:Sets DefaultMinVersion="1.3">
                <bt:Set Name="Mailbox"/>
            </bt:Sets>
        </Requirements>

        <Hosts>
            <Host xsi:type="MailHost">
                <DesktopFormFactor>
                    <!-- Message read form -->
                    <ExtensionPoint xsi:type="MessageReadCommandSurface">
                        <OfficeTab id="TabDefault">
                            <Group id="msgReadYoxelGroup">
                                <Label resid="groupLabel"/>

                                <!-- Task pane button -->
                                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                                    <Label resid="paneReadButtonLabel"/>
                                    <!--<Tooltip resid="paneReadButtonTooltip"/>-->
                                    <Supertip>
                                        <Title resid="paneReadSuperTipTitle"/>
                                        <Description resid="paneReadSuperTipDescription"/>
                                    </Supertip>
                                    <Icon>
                                        <bt:Image size="16" resid="icon_Cloud_16"/>
                                        <bt:Image size="32" resid="icon_Cloud_32"/>
                                        <bt:Image size="80" resid="icon_Cloud_80"/>
                                    </Icon>
                                    <Action xsi:type="ShowTaskpane">
                                        <SourceLocation resid="readTaskPaneUrl"/>
                                    </Action>
                                </Control>
                            </Group>
                        </OfficeTab>
                    </ExtensionPoint>
                </DesktopFormFactor>
            </Host>
        </Hosts>

        <Resources>
            <bt:Images>
                <bt:Image id="icon_Cloud_16" DefaultValue="https://example.aurinko.io/outlook/icons/aurinko_16.png"/>
                <bt:Image id="icon_Cloud_32" DefaultValue="https://example.aurinko.io/outlook/icons/aurinko_32_1.png"/>
                <bt:Image id="icon_Cloud_80" DefaultValue="https://example.aurinko.io/outlook/icons/aurinko_80.png"/>
            </bt:Images>
            <bt:Urls>
                <bt:Url id="readTaskPaneUrl" DefaultValue="https://example.aurinko.io/outlook/read.html?clientId=20e68f5b5758ae0ec22f455f6d54c1c4"/>
            </bt:Urls>
            <bt:ShortStrings>
                <bt:String id="groupLabel" DefaultValue="Aurinko"/>

                <!-- Read mode -->
                <bt:String id="paneReadButtonLabel" DefaultValue="Open Aurinko example"/>
                <bt:String id="paneReadSuperTipTitle" DefaultValue="Open Aurinko example"/>
            </bt:ShortStrings>
            <bt:LongStrings>
                <!-- Read mode -->
                <bt:String id="paneReadSuperTipDescription" DefaultValue="Opens Aurinko example"/>
            </bt:LongStrings>
        </Resources>

        <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
                          xsi:type="VersionOverridesV1_1">

            <Requirements>
                <bt:Sets DefaultMinVersion="1.3">
                    <bt:Set Name="Mailbox"/>
                </bt:Sets>
            </Requirements>

            <Hosts>
                <Host xsi:type="MailHost">

                    <DesktopFormFactor>
                        <!--<FunctionFile resid="functionFile"/>-->
                        <SupportsSharedFolders>true</SupportsSharedFolders>
                        <!-- Message read form -->
                        <ExtensionPoint xsi:type="MessageReadCommandSurface">
                            <OfficeTab id="TabDefault">
                                <Group id="msgReadYoxelGroup">
                                    <Label resid="groupLabel"/>

                                    <!-- Task pane button -->
                                    <Control xsi:type="Button" id="msgReadOpenPaneButton">
                                        <Label resid="paneReadButtonLabel"/>
                                        <!--<Tooltip resid="paneReadButtonTooltip"/>-->
                                        <Supertip>
                                            <Title resid="paneReadSuperTipTitle"/>
                                            <Description resid="paneReadSuperTipDescription"/>
                                        </Supertip>
                                        <Icon>
                                            <bt:Image size="16" resid="icon_Cloud_16"/>
                                            <bt:Image size="32" resid="icon_Cloud_32"/>
                                            <bt:Image size="80" resid="icon_Cloud_80"/>
                                        </Icon>
                                        <Action xsi:type="ShowTaskpane">
                                            <SourceLocation resid="readTaskPaneUrl"/>
                                            <SupportsPinning>true</SupportsPinning>
                                        </Action>
                                    </Control>
                                </Group>
                            </OfficeTab>
                        </ExtensionPoint>
                    </DesktopFormFactor>
                </Host>
            </Hosts>

            <Resources>
                <bt:Images>
                    <bt:Image id="icon_Cloud_16" DefaultValue="https://example.aurinko.io/outlook/icons/aurinko_16.png"/>
                    <bt:Image id="icon_Cloud_32" DefaultValue="https://example.aurinko.io/outlook/icons/aurinko_32_1.png"/>
                    <bt:Image id="icon_Cloud_80" DefaultValue="https://example.aurinko.io/outlook/icons/aurinko_80.png"/>
                </bt:Images>
                <bt:Urls>
                    <!--<bt:Url id="functionFile" DefaultValue="https://mailapp.repfabric.info/client/Functions.html"/>-->
                    <bt:Url id="readTaskPaneUrl" DefaultValue="https://example.aurinko.io/outlook/read.html?clientId=20e68f5b5758ae0ec22f455f6d54c1c4"/>
                </bt:Urls>
                <bt:ShortStrings>
                    <bt:String id="groupLabel" DefaultValue="Aurinko"/>

                    <!-- Read mode -->
                    <bt:String id="paneReadButtonLabel" DefaultValue="Open Aurinko example"/>
                    <bt:String id="paneReadSuperTipTitle" DefaultValue="Open Aurinko example"/>
                </bt:ShortStrings>
                <bt:LongStrings>
                    <!-- Read mode -->
                    <bt:String id="paneReadSuperTipDescription" DefaultValue="Opens Aurinko example"/>
                </bt:LongStrings>
            </Resources>

            <ExtendedPermissions>
                <ExtendedPermission>AppendOnSend</ExtendedPermission>
            </ExtendedPermissions>
        </VersionOverrides>
    </VersionOverrides>

</OfficeApp>