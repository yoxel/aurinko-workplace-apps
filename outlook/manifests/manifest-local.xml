    <FormSettings>
        <Form xsi:type="ItemRead">
            <DesktopSettings>
                <SourceLocation DefaultValue="https://localhost:63342/aurinko-addons/outlook/read.html?clientId=4e570b248fd3e4e2583b3773e3b586d6"/>
                <RequestedHeight>400</RequestedHeight>
            </DesktopSettings>
            <TabletSettings>
                <SourceLocation DefaultValue="https://localhost:63340/client/read.html"/>
                <RequestedHeight>400</RequestedHeight>
            </TabletSettings>
            <PhoneSettings>
                <SourceLocation DefaultValue="https://localhost:63340/client/read.html"/>
            </PhoneSettings>
        </Form>
        <Form xsi:type="ItemEdit">
            <DesktopSettings>
                <SourceLocation DefaultValue="https://localhost:63340/client/compose.html"/>
            </DesktopSettings>
            <TabletSettings>
                <SourceLocation DefaultValue="https://localhost:63340/client/compose.html"/>
            </TabletSettings>
            <PhoneSettings>
                <SourceLocation DefaultValue="https://localhost:63340/client/compose.html"/>
            </PhoneSettings>
        </Form>
    </FormSettings>

    <Permissions>ReadWriteItem</Permissions>
